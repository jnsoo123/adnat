<!DOCTYPE html>
<html>
  <head>
    <title>Adnat</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1><%= link_to 'Adnat', root_path %></h1>
    <p>Logged in as <%= current_user.name %>, <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></p>
    <%= yield %>
  </body>
</html>
